<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:textSize="28sp"
                android:textColor="#000000"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvCreateTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_tao_de"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingStart="8dp" />

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/them"
                android:textSize="14sp"
                android:textColor="#0066CC"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Form -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chon_mon_hoc"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/spinner_subject"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@android:drawable/editbox_background_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chon_muc_do"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/cb_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/de" />

            <CheckBox
                android:id="@+id/cb_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vua"
                android:layout_marginStart="16dp" />

            <CheckBox
                android:id="@+id/cb_hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kho"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nhap_so_cau_label"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_number_questions"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="@string/nhap_so_cau_hint"
            android:background="@android:drawable/edit_text"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cau_chon_nhieu"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rg_multiple_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rb_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/co" />

            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/khong"
                android:layout_marginStart="12dp" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nhap_so_phut_label"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_minutes"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="@string/nhap_so_phut_hint"
            android:background="@android:drawable/edit_text"
            android:padding="8dp" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>

</ScrollView>
