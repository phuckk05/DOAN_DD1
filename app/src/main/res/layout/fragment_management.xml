<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8F8F8"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    tools:context=".fragment.ManagementFragment">

    <!-- Header row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvManagementTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/quan_ly_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/ivAddQuestion"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_add_24"
            android:contentDescription="@string/tao_moi_cau_hoi"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Create question button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateQuestion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/tao_moi_cau_hoi"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="6dp"
        android:backgroundTint="#3D4AFA"
        android:textColor="#FFFFFF" />

    <!-- Tabs -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical"
                android:text="@string/tab_tat_ca"
                android:textSize="13sp"
                android:textColor="#111111"
                android:background="@drawable/tab_selected_bg" />

            <TextView
                android:id="@+id/tabEnglish"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical"
                android:text="@string/tab_tieng_anh"
                android:textSize="13sp"
                android:textColor="#111111" />

            <TextView
                android:id="@+id/tabMath"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical"
                android:text="@string/tab_toan_hoc"
                android:textSize="13sp"
                android:textColor="#111111" />

            <TextView
                android:id="@+id/tabHistory"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical"
                android:text="@string/tab_lich_su"
                android:textSize="13sp"
                android:textColor="#111111" />

            <TextView
                android:id="@+id/tabGeography"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical"
                android:text="@string/tab_dia_li"
                android:textSize="13sp"
                android:textColor="#111111" />

            <TextView
                android:id="@+id/tabChemistry"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical"
                android:text="@string/tab_hoa_hoc"
                android:textSize="13sp"
                android:textColor="#111111" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQuestions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="18dp" />

</LinearLayout>
