<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8F8F8"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    tools:context=".fragment.ManagementFragment">

    <!-- Header row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quản lý"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ivAddQuestion"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo môn"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="#3D4AFA"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_add_24"
            app:iconGravity="textStart"
            app:iconTint="@android:color/white" />
    </LinearLayout>

    <!-- Create question button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateQuestion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/tao_moi_cau_hoi"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="6dp"
        android:backgroundTint="#3D4AFA"
        android:textColor="#FFFFFF" />

    <!-- Tabs (Dynamic) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Tabs will be added dynamically from database -->
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQuestions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="18dp" />

</LinearLayout>
